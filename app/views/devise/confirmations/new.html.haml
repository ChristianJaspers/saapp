.wizard-window.sign-in
  %h2= t('devise.confirmations.header')
  .col-md-6.col-md-offset-3
    = simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name, locale: I18n.locale), html: { method: :post }) do |f|
      - if f.error_notification.present?
        .form-warning.center
          = f.error_notification
          = f.full_error :confirmation_token
      .form-inputs
        = f.input :email, required: true, autofocus: true
      .form-actions.center.clearfix
        = f.button :submit, t('devise.links.resend_confirmation_instructions'), {class: "btn-primary"}
    .center.bottom-default
      = render 'devise/shared/links'
