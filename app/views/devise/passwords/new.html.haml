.wizard-window.sign-in
  %h2 Forgot your password?
  .col-md-6.col-md-offset-3
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name, locale: I18n.locale), html: { method: :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: true, autofocus: true
      .form-actions.center
        = f.button :submit, t('devise.links.send_me_reset_password_instructions'), {class: "btn-primary"}
    .center.bottom-default
      = render 'devise/shared/links'
