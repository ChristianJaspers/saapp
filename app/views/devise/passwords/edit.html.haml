.wizard-window.sign-in
  %h2= t('devise.passwords.change_your_password')
  .col-md-6.col-md-offset-3
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token
      .form-inputs
        = f.input :password, label: t('devise.passwords.new_password'), required: true, autofocus: true
        = f.input :password_confirmation, label: t('devise.passwords.confirm_your_new_password'), required: true
      .form-actions.center
        = f.button :submit, t('devise.links.change_my_password'), {class: "btn-primary"}

    .center.bottom-default
      = render 'devise/shared/links'
