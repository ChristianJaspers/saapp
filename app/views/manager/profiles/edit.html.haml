.my-account
  .col-md-6.col-md-offset-1
    %h4= t('manager.tabs.my_profile')
    = simple_form_for current_user, url: manager_profile_path, method: :patch do |f|
      = f.input :display_name
      = f.button :submit, t('common.save_changes'), class: 'btn-primary f-right'
      .clearfix.bottom-default

  .col-md-2.center
    .icon-team
    = t('manager.profile.edit.team_size')
    .rep-counter
      = link_to sales_reps_count, manager_users_path
    = t('manager.profile.edit.sales_reps')
