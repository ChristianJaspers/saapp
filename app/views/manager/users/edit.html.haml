.my-account
  .col-md-8.col-md-offset-1
    = simple_form_for user, url: manager_user_path(user, locale: I18n.locale) do |f|
      = f.input :email
      = f.input :display_name
      = f.input :manager, as: :boolean
      .pull-right
        = link_to t('common.cancel'), manager_users_path(locale: I18n.locale), class: 'btn btn-dark'
        %span.or
          = t('common.or')
        = f.button :submit, t('common.save_changes'), class: 'btn-primary'
