!!!
%html{lang: I18n.locale}
  %head
    %meta{:charset => 'utf-8'}
    %title= t('application_name')
    = include_gon
    %meta{content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no', name: 'viewport'}
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      = javascript_include_tag 'https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js', 'https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js'

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = phrase_javascript(Phrase.auth_token)
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          = link_to t('application_name'), localized_path(I18n.locale, root_path), class: 'navbar-brand'

        %ul.nav.navbar-nav
          - static_pages.each do |page|
            %li
              = link_to page.label, localized_cms_page_path(page)
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in? && !current_user.admin?
            %li
              %span
                = t('navbar.logged_as')
                = current_user.email
            %li
              = link_to t('navbar.my_account_link'), manager_root_path
          %li
            - if user_signed_in?
              - if current_user.admin?
                = link_to t('navbar.admin_link'), admin_root_path
            - else
              = link_to t('navbar.login_link'), new_user_session_path(locale: I18n.locale)
          - if user_signed_in?
            %li
              = link_to t('navbar.logout_link'), destroy_user_session_path, method: 'delete'
          %li
            .btn-group
              %button.dropdown-toggle{type: 'button', data: {toggle: 'dropdown'}}
                = image_tag locale_flag_filename(I18n.locale)
              %ul.dropdown-menu{role: 'menu'}
                - I18n.available_locales.each do |locale|
                  %li
                    = link_to localized_current_path(locale) do
                      = image_tag locale_flag_filename(locale)
                      = locale.to_s.upcase

    .container
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert alert-#{['error', 'alert'].include?(name) ? 'danger' : 'success' } alert-dismissable" do
          %button.close{type: 'button', data:{dismiss: 'alert'}, aria: {hidden: 'true'} } &times;
          = msg
      = yield(:top) if content_for?(:top)
      = yield

    / footer demo template /
    %footer
      .container
        .col-md-2
          %h2 ABOUT US
          %ul
            %li
              %a Nori grape

        .col-md-2
          %h2 CATEGORIES
          %ul
            %li
              %a Nori grape

        .col-md-2
          %h2 OTHER STUFF
          %ul
            %li
              %a Nori grape

        .col-md-3.col-md-offset-3.footer-logo
          %h3 BetterSalesman
          %p Â© 2013
