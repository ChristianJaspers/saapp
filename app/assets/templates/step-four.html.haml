.wizard-window.col-md-7.summary
  %h2= I18n.t('wizard.step_4.header')

  .left-default

    %h3= I18n.t('wizard.step_4.categories_and_arguments_header')
    .review{'ng-repeat' => 'productGroup in wizard.productGroups'}
      %strong {{productGroup.name}}
      %ul.inline{'ng-repeat' => 'argument in productGroup.arguments'}
        %li.inline
          {{argument.feature}}
          %span= I18n.t('wizard.step_4.benefit')
          {{argument.benefit}}

    %h3= I18n.t('wizard.step_4.invitations_header')
    %ul{'ng-repeat' => 'invitation in wizard.invitations'}
      %li.block
        %strong {{invitation.email}}
        {{invitation.displayName}}

    .clearfix
    %button.btn.btn-primary.ladda-button{type: 'button', 'ng-click' => 'submitWizard()', data: {style: 'zoom-out'}}
      = I18n.t('wizard.step_4.submit_button')
